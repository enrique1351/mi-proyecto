# .env.example
# Template de configuración de variables de entorno
# 
# INSTRUCCIONES:
# 1. Copiar este archivo como .env
# 2. Completar con tus credenciales reales
# 3. NUNCA subir .env a Git (debe estar en .gitignore)

# ============================================================================
# SECURITY
# ============================================================================

# Secret para encriptación del vault (cambiar en producción)
VAULT_SECRET=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY-IN-PRODUCTION

# ============================================================================
# CRYPTO EXCHANGES
# ============================================================================

# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Coinbase
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Kraken
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# ============================================================================
# STOCK BROKERS
# ============================================================================

# Interactive Brokers
IBKR_API_KEY=your_ibkr_api_key_here
IBKR_API_SECRET=your_ibkr_api_secret_here

# Alpaca
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # paper o https://api.alpaca.markets para real

# ============================================================================
# MARKET DATA PROVIDERS
# ============================================================================

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io
POLYGON_API_KEY=your_polygon_key_here

# Glassnode (on-chain data)
GLASSNODE_API_KEY=your_glassnode_key_here

# FRED (economic data)
FRED_API_KEY=your_fred_key_here

# ============================================================================
# AI SERVICES
# ============================================================================

# Anthropic Claude (para AI Auditor)
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI (alternativa)
OPENAI_API_KEY=your_openai_key_here

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL (si se usa en vez de SQLite)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quant_system
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# ============================================================================
# CLOUD SERVICES (OPCIONAL)
# ============================================================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Cloud
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Slack
SLACK_WEBHOOK_URL=your_slack_webhook_url

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================

# Environment (local, cloud, production)
ENVIRONMENT=local

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Trading mode (paper, real)
TRADING_MODE=paper

# Initial capital
INITIAL_CAPITAL=10000

# Max drawdown allowed
MAX_DRAWDOWN=0.20

# Risk per trade
RISK_PER_TRADE=0.02